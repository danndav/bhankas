{
  "name": "banka",
  "version": "1.0.0",
  "description": "Bhanka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals",
  "main": "app.js",
  "scripts": {
    "start": " node ./build/app.js",
    "start-dev": "nodemon ./server/app.js --watch server --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-babel",
    "test-dev": "nyc --require @babel/register ---reporter=html --reporter=text mocha./server/tests/*.js --timeout 20000 --watch --exit",
    "test": "nyc --reporter=html --reporter=text mocha --require @babel/polyfill --require @babel/register --timeout 5000 ./server/tests/*.js --exit",
    "lint": " eslint  ./server/**/*.js  --fix || true",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danndav/bhankas.git"
  },
  "keywords": [
    "node",
    "express"
  ],
  "author": "David Imodoye Daniel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danndav/bhankas/issues"
  },
  "homepage": "https://github.com/danndav/bhankas#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.10.0"
  }
}
